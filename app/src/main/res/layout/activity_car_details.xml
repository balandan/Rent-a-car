<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    xmlns:android="http://schemas.android.com/apk/res/android">


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".user.CarDetailsActivity">


    <ImageView
        android:id="@+id/car_details_ImageView"
        android:layout_width="460dp"
        android:layout_height="220dp"
        android:scaleType="centerCrop"
        android:background="@color/black"
        />

    <TextView
        android:id="@+id/car_details_TitleTextView"
        android:text="ford FOCUS 200"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:textStyle="bold"
        android:textSize="23dp"
        android:textColor="@color/colorWhite"
        android:textAllCaps="true"
        android:textAlignment="center"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/car_details_ImageView" />

    <TextView
        android:id="@+id/car_details_DescriptionTextView"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textStyle="bold"
        android:textSize="19sp"
        android:padding="5dp"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/car_details_TitleTextView"
        android:textColor="@color/colorWhite"
        />

    <TextView
        android:id="@+id/car_details_PriceTextView"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textSize="19sp"
        android:padding="5dp"
        android:layout_alignEnd="@id/car_details_DescriptionTextView"
        android:layout_marginRight="30dp"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorWhite"
        android:layout_below="@id/car_details_DescriptionTextView"
        android:layout_alignRight="@id/car_details_DescriptionTextView" />

    <Button
        android:id="@+id/detailsCar_addBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:layout_margin ="15dp"
        android:layout_alignParentBottom="true"
        android:text="Confirma"
        android:textColor="@color/colorWhite"
        android:textSize="18dp"

        />

</RelativeLayout>
</ScrollView>